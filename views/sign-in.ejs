<!DOCTYPE html>
<html lang="en">
<head>
    <title>Virt: Sign in</title>
    <link rel="icon" type="image/png"  href="\media\32 x 32 icon.png">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="\css\forms.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <script src="\js\sign-in-validation.js" defer></script>
  </head>
<body>
     <%- include('partials/header')%>
    </div>

    
    <% if(error && error.length) { %> 
      <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3" 
      id="pdAlert" role="alert">
          <h3 class="text-center flash">
              <%= error %> 
          </h3>
          <p id="dismiss-pd" class="text-center dismiss">dismiss</p>
        </div>
      <%  } %>

      <% if(sir && sir.length) { %> 
        <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3" 
        id="pdAlert" role="alert">
            <h3 class="text-center flash">
                <%= sir %> 
            </h3>
            <p id="dismiss-pd" class="text-center dismiss">dismiss</p>
          </div>
        <%  } %>

        <% if(lus && lus.length) { %> 
          <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3" 
          id="pdAlert" role="alert">
              <h3 class="text-center flash">
                  <%= lus %> 
              </h3>
              <p id="dismiss-pd" class="text-center dismiss">dismiss</p>
            </div>
          <%  } %>

          <% if(ac && ac.length) { %> 
            <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-3" 
            id="pdAlert" role="alert">
                <h3 class="text-center">
                    <%= ac %> 
                </h3>
                <p id="dismiss-pd" class="text-center dismiss">dismiss</p>
              </div>
            <%  } %>

    <div id="container-new" class="col-6 offset-3">
<h2 class="text-center mt-3">
    <div class="line-before"></div>
    Sign in
    <div class="line-after"></div>
  </h2>


<form action="/account/sign-in" method="POST" id="form">

<div class="input-cont">

    <div class="input-group mb-4 mt-5">
      <div class="input-group-prepend">
        <span class="icon form-icon material-symbols-outlined">
          mail
          </span>
      </div>
      <input type="text" placeholder="your@email.com" 
      class="price"
       name="email" id="email" minlength="3" maxlength="30">
       <div class="valid-feedback mb-3">on key</div>
         <div class="invalid-feedback mb-3" id="invalidUEmail"></div>
    </div>

    

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="icon form-icon material-symbols-outlined">
          lock
          </span>
      </div>
      
      <input type="password" placeholder="password" class="price"
       name="password" id="password" minlength="8" maxlength="50">
       <div class="valid-feedback mb-3">on key</div>
         <div class="invalid-feedback mb-3" id="invalidPwd"></div>
    </div>

  </div>
    <a href="/account/forgot-password">
    <p class="text-center sign-in-options mb-1">forgot password?</p>
    </a>

    <a href="/account/create-account">
    <p class="text-center sign-in-options">create account</p>
    </a>

<div class="form-row text-center">
    <div class="col-12">
        <button type="submit" class="mt-2 rounded" id="submit">Sign in</button>
    </div>
 </div>
</div>
</form>

</div>
</div>
<div class="mt-auto">
<%- include('partials/footer')%>   
</div> 
</body>

<script>
  const alert = document.getElementById('pdAlert');
  const dismiss = document.getElementById('dismiss-pd');
  dismiss.onclick = function () {
    if (alert.style.display !== "none") {
      alert.style.display = "none";
    } else {
      alert.style.display = "block";
    }
  };
  
  </script>
<style>
    a{
    color: #3c3d3c;
    text-decoration: none;
}

a:hover{
    color: #3c3d3c;
 text-decoration: underline #1ca78b 0.3vh;
}

footer.a{
    color: blue;
}

</style>

</html>